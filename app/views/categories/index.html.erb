
<%= render "components/navbar" %>
<div class="container">
<h2>topics index</h2>


<% @categories.each do |category| %>
    <h4>NAME</h4><p><%= category.name %></p>
    <h4>ID</h4><p><%= category.id %></p>
    <h4>Show</h4><p><%= link_to 'Show', category_path(category.name) %></p>
    <% if @user_category_ids.include?(category.id) %>
      <h4>subscribed</h4>
    <% else %>
      <h4>not subscribed</h4>
    <% end %>
<% end %>
</div>
