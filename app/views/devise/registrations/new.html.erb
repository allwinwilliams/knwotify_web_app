<%= render "components/navbar" %>
<div class="container">
  <div class="text-center w-50 mx-auto">
    <h2 class="py-4">Sign up</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div class="field form-group py-3">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, class: "form-control text-center" %>
      </div>

      <div class="field form-group py-3">
        <%= f.label :password %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "off", class: "form-control text-center" %>
      </div>

      <div class="field  form-group py-3">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control text-center" %>
      </div>

      <div class="actions">
        <%= f.submit "Sign up", class: "btn btn-success w-100" %>
      </div>
    <% end %>
    <p class="my-4">
      Already a User? <%= render "devise/shared/links" %>
    </p>
  </div>
</div>
